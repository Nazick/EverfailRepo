{% extends '::base.html.twig' %}

{% block body -%}
<h1>Customer</h1>
<br/>
<table class="table">
	<tbody>
		<tr>
			<th>{{ customerName }}</th>
			<td>{{ entity.custName }}</td>
		</tr>
		<tr>
			<th>{{ customerEmail }}</th>
			<td>{{ entity.email }}</td>
		</tr>
	</tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('customer') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('customer_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
