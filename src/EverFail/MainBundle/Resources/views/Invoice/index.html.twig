{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Invoice List</h1>
    <ul>
            <a href="{{ path('invoice_new') }}">
                <h3>Create an Invoice</h3>
            </a>
    </ul>
    <br/>

    <table class="table">
        <thead>
            <tr>
                <th>{{ paymentDate }}</th>
                <th>{{ paymentStatus }}</th>
                <th>{{ paymentMethod }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('invoice_show', { 'id': entity.id }) }}">{{ entity.paymentDate|date('Y-m-d') }}</a></td>
                <td>{{ entity.paymentStatus }}</td>
                <td>{{ entity.paymentMethod }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('invoice_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('invoice_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
